<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadingBase" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?textPrimary</item>
    </style>

    <style name="Heading1" parent="HeadingBase">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading1Light" parent="Heading1">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Heading2" parent="HeadingBase">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Heading3" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?textPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Body" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>